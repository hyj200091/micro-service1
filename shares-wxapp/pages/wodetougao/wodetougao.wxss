text{
  font-size: 16px;
}
.tougao-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10px;
  border-bottom: 2rpx solid dimgray;
}
.tougao-author{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  margin-top: 10px;
align-items: center;

}
.tougao-author text{
  font-size:0.9rem;
  
}
.tougao-author text:nth-child(2) {
  font-size: 0.7rem;
  color: rgb(104, 102, 102);
}
image {
  width: 99%;
  height: 160px;
  margin-top: 10px;
}
.jianjie {
  text-align: left;
  margin-left: 0;
  width: 100%;
  margin-top: 10px;
  font-size: 0.8rem;
}
.zhuangtai {
  width: 100%;
  text-align: right;
  color: rgb(104, 102, 102);
  font-size: 0.7rem;
}